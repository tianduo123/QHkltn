/* pages/me/me.wxss */
page{
  background: #f5f5f5;
  box-sizing: border-box;
  padding-bottom: 100rpx
}
.bg{
  width: 100%;
  height: 400rpx;
}
.bg image{
  width: 100%;
  height: 100%
}
.userInfo{
  width: 90%;
  height: 400rpx;
  background: #ffffff;
  margin-left: 5%;
  position: absolute;
  top: 100rpx;
  display: flex;
  border-radius: 5%;
  overflow: hidden;
  flex-direction: column
}
.top{
  display:flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 300rpx;
  justify-content: space-around;
  border-bottom: 1px solid #eeeeee

}
.avatar{
  width: 123rpx;
  height: 123rpx;
  border-radius: 50%;
  overflow: hidden;
}
.bottom{
  display: flex;
  justify-content: space-around
}
.left{
  border-right: 1px solid #eeeeee;
  display: flex;
  align-items: center;
  font-size:  28rpx;
  height: 100rpx;
  width: 50%;
  justify-content: space-around
}
.right{
  display: flex;
  align-items: center;
  font-size:  28rpx;
  height: 100rpx;
  width: 50%;
  justify-content: space-around
}
.wrap{
  display: flex;
  align-items: center
}
.ranking{
  width: 90%;
  background: #ffffff;
  margin-left: 5%;
  /* position: absolute; */
  /* top: 550rpx; */
  border-radius: 5%;
  overflow: hidden;
  margin-top: 200rpx;
  /* margin-bottom: 80rpx */
}
.title{
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eeeeee
}
.content{
  width: 100%;
  background: #fff;
  height: 500rpx;
  box-sizing: border-box;
  padding: 30rpx;
  overflow: auto
}
.item-top{
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.item-bot{
  font-size: 28rpx;
  margin-bottom: 10rpx
}
.item{
  border-bottom: 1px solid #eeeeee;
  /* margin-top: 20rpx; */
