<!--pages/near/near.wxml-->
<view class='wrap'>
  <view class='item' wx:for='{{nearList}}' wx:key bindtap='tonear'>
    <view class='left'>
      <image src='{{imgUrl+item.image}}' style='width:100%;height:100%'></image>
    </view>
    <view class='right'>
      <view style='font-size:28rpx'>{{item.school_name}}</view>
      <view style='font-size:26rpx;display:inline-block;width:100%;text-align:right'>{{item.distance}}km</view>
      <view style='font-size:26rpx;color:#999999'>{{item.jianjie}}</view>
    </view>
  </view>
</view>