/* pages/near/near.wxss */
.wrap{
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
}
.item{
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eeeeee
}
.left{
  width: 200rpx;
  height: 140rpx;
}
.right{
  width: 450rpx;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  /* white-space: nowrap */
  display:-webkit-box;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:3;
}