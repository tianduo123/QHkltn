<view class='avatar'>
  <image style='width:100%;height:100%' src='{{userInfo.avatarUrl}}'></image>
</view>
<view class='name'>{{userInfo.nickName}}</view>
<form bindsubmit='reset'>
  <view class='item'>
    <input class='inp' placeholder='请输入您的手机号' name='phone' value='{{val}}'></input>
  </view>
  <view class='item'>
    <input class='inp' placeholder='请输入新密码' name='password' value='{{val}}'></input>
  </view>
  <view class='item'>
    <input class='inp' placeholder='请确认新密码' name='password2' value='{{val}}'></input>
  </view>
  <button class='btn' form-type='submit'>确认修改</button>
  <!-- <view class='forget' bindtap='forget'>忘记密码?</view> -->
</form>