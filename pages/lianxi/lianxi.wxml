<view class='top'>
  <image src='../../icon/daohang.png' style='width:45rpx;height:45rpx;margin-left:30rpx'></image>
  <view style='font-size:28rpx'>地图导航</view>
</view>
<map class='map' longitude='{{longitude}}' latitude='{{latitude}}'></map>
