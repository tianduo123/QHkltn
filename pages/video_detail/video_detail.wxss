/* pages/video_detail/video_detail.wxss */
@import "/wxParse/wxParse.wxss";
page{
  box-sizing: border-box;
  padding-bottom: 120rpx
}
.video{
  width: 100%;
  height: 420rpx
}
.title{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  font-size: 26rpx
}
.title2{
  width: 100%;
  text-align: right;
  box-sizing: border-box;
  padding-right: 30rpx;
  font-size: 26rpx;
  color: #666
}
.line{
  width: 100%;
  height: 20rpx;
  background: #eeeeee
}
