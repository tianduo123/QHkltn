/* pages/everyday/everyday.wxss */
page{
  box-sizing: border-box;
  padding-bottom: 120rpx
}
.video{
  width: 100%;
  height: 420rpx
}
.title{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  font-size: 26rpx
}
.title2{
  width: 100%;
  text-align: right;
  box-sizing: border-box;
  padding-right: 30rpx;
  font-size: 26rpx;
  color: #666
}
.line{
  width: 100%;
  height: 20rpx;
  background: #eeeeee
}

.btn{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #eeeeee
}
.btn_item{
  width: 33.33%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 24rpx;
  color: #999999
}
