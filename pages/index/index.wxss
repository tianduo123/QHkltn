page{
  box-sizing: border-box;
  padding-bottom: 30rpx
}
.banner{
  width: 100%;
  height: 400rpx;
}
.tab{
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap
}
.tab-item{
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 40rpx
}
.line{
  width: 100%;
  height: 20rpx;
  background: #eeeeee
}
.funwrap{
  margin-left: 27rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 100rpx
}
.fun-item{
  display: flex;
  width: 100%;
  height: 184rpx;
  border-bottom: 1px solid #eeeeee;
  align-items: center
}
.zuji{
  display: flex;
  align-items: center
}
.content{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 27rpx
}
.wrap{
  position: fixed;
  top: 0;
  left: 0
}
.near{
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
  padding: 20rpx 0 20rpx 20rpx
}
.near_top{
  width: 100%;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center
}
.scroll_item{
  width: 210rpx;
  height: 190rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
  display: inline-block
}
.icon{
  width: 100%;
  /* height: 60rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 24rpx;
  color: #666666;
  /* margin-bottom: 50rpx */
}
.icon_img{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden
}
/* 首页视频蒙层 */
.Vwrap{
  position: fixed;
  top: 0;
  left: 0;
  background: #ffffff
}


.btn{
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #eeeeee
}
.btn_item{
  width: 33.33%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 24rpx;
  color: #999999
}
.z{
  display: flex;
  align-items: center
}
button::after{
  border: none;

}
button{
  background-color: #fff;
  border-radius: 0;
  font-size: 24rpx;
  color: #999999
}
.Citem{
  border-bottom: 1px solid #eee;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-top: 20rpx
}
.comment{
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #eeeeee;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  background: #fff
}
.button2{
  width: 145rpx;
  height: 65rpx;
  font-size: 28rpx;
  color: #ff9900;
  border: 1px solid #ff9900;
  border-radius: 10rpx;
  line-height: 65rpx;
  text-align: center
}