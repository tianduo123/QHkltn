.wrap{
  width: 100%;
  height: 170rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 18rpx
}
.item{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 26rpx;
  color: #9b999c;
  align-items: center;
  height: 100%
}
.rule_wrap{
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.content_wrap{
  width: 90%;
  height: 800rpx;
  background: #ffffff;
  border-radius: 20rpx;
}
.content_wrap_top{
  width: 100%;
  height: 170rpx;
  display: flex;
  align-items: center;
  justify-content: space-around
}
.content_wrap_top>image{
  width: 424rpx;
  height: 80rpx
}
.content_wrap_bottom{
  width: 90%;
  font-size: 26rpx;
  color: #666666;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}
.top-btn{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #eeeeee
}
.btn-l{
 border-right: 1px solid #eeeeee;
  display: flex;
  align-items: center;
  font-size:  28rpx;
  width: 50%;
  justify-content: space-around

}
.btn-r{
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx;
  width: 50%
}
.userInfo{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-direction: column
}
.avatar{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
}

.msg_item{
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  border-bottom: 1px solid #eee;
  margin-top: 20rpx
}
.msg_user{
  display: flex;
  align-items: center
}
.msg_user>image{
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
