/* pages/qiandao/qiandao.wxss */

page{
  background: #fd384e;
  box-sizing: border-box;
  padding: 1rpx
}
.bindPhone{
  font-size: 28rpx;
  color: #FFFF00;
  text-align: right;
  margin-right: 30rpx
}
.top{
  width: 700rpx;
  height: 600rpx;
  background: #ffffff;
  margin: 20rpx auto 20rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 30rpx;
}
.bottom{
  width: 700rpx;
  background: #ffffff;
  margin: 20rpx auto;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 30rpx
}
.bottom2{
  width: 700rpx;
  height: 800rpx;
  background: #ffffff;
  margin: 20rpx auto 100rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  padding: 30rpx;
  overflow: auto
}


.title{
  font-size: 32rpx;
  border-left: 3px solid #fd384e;
  margin-bottom: 20rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between
}
.work{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  border-bottom: 1px solid #eeeeee;
  width: 100%;
  height: 120rpx
}
.work2{
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  width: 100%;
}
.work3{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  width: 100%;
  border-bottom: 1px solid #eee
}
.tuijianren{
  display: flex;
  font-size: 28rpx;
  color: #999999;
  width: 100%;
  margin-top: 30rpx;
  align-items: center;
  margin-bottom: 10rpx
}
.tuijianren>input{
  width: 40%;
  border: 1px solid #999
}
.btn{
