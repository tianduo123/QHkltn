<!--pages/getgoods/getgoods.wxml-->
<view class='item' wx:for='{{goodsList}}' wx:key>
  <view class='info'>
    <view class='left'>
      <image src='{{imgUrl+item.image}}' style='width:100%;height:100%'></image>
    </view>
    <view class='right'>
      <view style='font-size:28rpx;'>{{item.goods}}</view>
      <view style='font-size:26rpx;color:#f45010'>所需积分：{{item.num}}</view>
      <view style='font-size:26rpx;color:#cccccc'>累计兑换{{item.ex_num}}件</view>
    </view>
  </view>
  <view class='btn' bindtap='getGood' data-id='{{item.id}}' data-num='{{item.num}}'>马上兑</view>
</view>
<!-- </view> -->
<view class='record'>
  <view style='display:flex;align-items:center;' bindtap='torecord'>
   <image src='../../icon/record.png' style='width:50rpx;height:50rpx'></image>
   <view>兑换记录</view>
  </view>
</view>